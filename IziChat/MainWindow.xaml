<Window x:Class="IziChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IziChat"
        xmlns:chatLib="clr-namespace:ChatLib;assembly=ChatLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="MainWindow_OnLoaded"
        Name="Main">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer Name="Users" Grid.Row="0"  HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Left" Width="160">
            <ItemsControl ItemsSource="{Binding ElementName=Main, Path=OnlineUsers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="4">
                            <StackPanel Margin="15,10" Orientation="Vertical">
                                <TextBlock Text="{Binding}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <ScrollViewer Name="Scroller" Grid.Row="0"  HorizontalScrollBarVisibility="Disabled" Margin="160,0,0,0">
            <ItemsControl ItemsSource="{Binding ElementName=Main, Path=Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="chatLib:MessageInfo">
                        <Border Background="Lavender" CornerRadius="3" Margin="4">
                            <StackPanel Orientation="Vertical" Margin="15,10">
                                <TextBlock>                                   
                                     <Run Text="{Binding UserName}" FontWeight="Bold"/>
                                     <Run Text="("/><Run Text="{Binding Date}"/><Run Text=")"/>
                                </TextBlock>
                                <TextBlock Text="{Binding Message}" TextWrapping="Wrap"></TextBlock>
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <TextBox 
            Grid.Row="1" 
            AcceptsReturn="False" 
            AcceptsTab="False"
            KeyDown="UIElement_OnKeyDown"
            Padding="8"
            TextWrapping="Wrap"
            >


        </TextBox>

    </Grid>
</Window>
