<Window x:Class="IziChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IziChat"
        xmlns:chatLib="clr-namespace:ChatLib;assembly=ChatLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="650"
        Loaded="MainWindow_OnLoaded"
        Name="Main"
        MinWidth="450"
        MinHeight="450">
    <Window.Resources>
        <ResourceDictionary Source="Styles.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MaxWidth="250" MinWidth="150" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.RowSpan="2" BorderThickness="0,0,1,0" BorderBrush="#44000000" Background="#11000000">
            <ScrollViewer Name="Users" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding ElementName=Main, Path=OnlineUsers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="4">
                                <StackPanel Margin="15,10" Orientation="Vertical">
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
        <ScrollViewer Name="Scroller" Grid.Row="0" Grid.Column="1" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding ElementName=Main, Path=Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="chatLib:MessageInfo">
                        <Border Background="Lavender" CornerRadius="3" Margin="4">
                            <StackPanel Orientation="Vertical" Margin="15,10">
                                <TextBlock>
                                    <Run Text="{Binding UserName}" FontWeight="Bold" />
                                    <Run Text="(" /><Run Text="{Binding Date}" /><Run Text=")" />
                                </TextBlock>
                                <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            AcceptsReturn="False"
            AcceptsTab="False"
            KeyDown="UIElement_OnKeyDown"
            Padding="8"
            TextWrapping="Wrap"
            Style="{StaticResource ChatTextBox}" />
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0">
            <ItemsControl ItemsSource="{Binding ElementName=Main, Path=StatusClient}" Margin="5,5">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="local:StatusConnection">
                        <StackPanel Orientation="Horizontal">
                            <StatusBarItem>
                                <TextBlock Text="{Binding Status}" />
                            </StatusBarItem>
                            <StatusBarItem>
                                <ProgressBar Visibility="{Binding ProgressBarVisiblility}" IsIndeterminate="True"
                                             Width="200" Height="10" />
                            </StatusBarItem>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StatusBar>
    </Grid>
</Window>