<Window x:Class="IziChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IziChat"
        xmlns:chatLib="clr-namespace:ChatLib;assembly=ChatLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="MainWindow_OnLoaded"
        Name="Main">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer Name="Scroller" Grid.Row="0"  HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding ElementName=Main, Path=Messages}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="chatLib:MessageInfo">
                        <Border Background="Lavender" CornerRadius="3" Margin="4">
                            <StackPanel Orientation="Vertical" Margin="15,10">
                                <TextBlock Text="{Binding UserName}" FontWeight="Bold"></TextBlock>
                                <TextBlock Text="{Binding Message}"></TextBlock>
                            </StackPanel>
                            
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <TextBox 
            Grid.Row="1" 
            AcceptsReturn="False" 
            AcceptsTab="False"
            KeyDown="UIElement_OnKeyDown"
            Padding="8">
           
            
        </TextBox>
        
    </Grid>
</Window>
